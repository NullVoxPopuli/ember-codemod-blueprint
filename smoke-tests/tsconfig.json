{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "tests",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    // babel controls transpilation
    "noEmit": true,
    "allowJs": false,
    // Tells tsc that our files are not all concatted together, and we
    // are capable of import/export/require ing
    "isolatedModules": true
  },
  "include": ["tests/**/*", "tests/*"],
  "exclude": ["node_modules", "tmp"]
}
